# Environment variables configuration example
# Copy this to .env and fill in your values

# MongoDB Connection Strings
SOURCE_URI=mongodb://user:password@source-cluster:27017/myapp?authSource=admin
DEST_URI=mongodb://user:password@dest-cluster:27017/myapp?authSource=admin

# Database Names
SOURCE_DATABASE=myapp_production
DEST_DATABASE=myapp_migrated
PROGRESS_DATABASE=sync_progress

# Collections to sync (comma-separated)
COLLECTIONS=users,products,orders,reviews,inventory

# Performance Settings
BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=5000
MAX_ACCEPTABLE_LAG=2000
WORKERS_PER_COLLECTION=10

# Web UI Settings
UI_PORT=3000

# Logging
LOG_LEVEL=info

# MongoDB Atlas Example (replace with your credentials)
# SOURCE_URI=mongodb+srv://username:password@source-cluster.mongodb.net/dbname?retryWrites=true&w=majority
# DEST_URI=mongodb+srv://username:password@dest-cluster.mongodb.net/dbname?retryWrites=true&w=majority